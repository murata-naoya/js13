    <table class="table table-striped">
      <thead>
        <tr>
           <th>Name</th>
           <td><%= user.name %></td>
        </tr>
        <tr>
            <th>introduction</th>
            <td><%= user.introduction %></td>
        </tr>
      </thead>
      <tbody>
      </tbody>
    </table>

    <%= link_to "", edit_user_path(user), class: "col-xs-12 btn btn-default glyphicon glyphicon-wrench" %></span>


<div class="col-xs-12">
    <%= form_for(book) do |f| %>

      <h1>New book</h1>
      <div class="col-xs-12">
      <div class="field row">
        <%= f.label :title %><br>
        <input class="col-xs-12 book_title" type="text" name="book[title]" id="book_title", class: "book_title">
      </div>
     </div>
      <div class="col-xs-12">
      <div class="field row">
        <%= f.label :opinion %><br>
        <textarea class="col-xs-12 book_body" name="book[body]" id="book_body", class: "book_body"></textarea><br>
      </div>
      </div>
      <div class="actions row">
        <input type="submit" name="commit" value="Create Book" class="btn btn-primary col-xs-12" data-disable-with="Create Book">
      </div>
    <% end %>
</div>
</div>



