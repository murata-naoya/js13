<div class="container">
	<div class="row">
		<div class="col-md-4">
			<h1>User info</h1>

			<%= form_for(@user) do |f| %>
			      <% if @user.errors.any? %>
				    <div id="error_explanation">
				      <h2> error prohibited this user from being saved:</h2>
				      <ul>
				      <% @user.errors.full_messages.each do |message| %>
				        <li><%= message %></li>
				      <% end %>
				      </ul>
				    </div>
				  <% end %>
			  <div class="form-group">
			    <label>Name</label>
			    	<%= f.text_field :name, autofocus: true, class: "name" %><br>

			    <label>Image</label>
			   	    <%= f.attachment_field :profile_image, class: "user_image" %>

			    <label>Introduction</label>
			    	<%= f.text_area :introduction, autofocus: true, class: "introduction" %><br>

			    <%= f.submit "update user"  %>
			<% end %>
			</div>
		</div>
	</div>
</div>



