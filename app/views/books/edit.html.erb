<h1>Editing Book</h1>
<%= form_for(@book) do |f| %>
	<% if @book.errors.any? %>
              <div id="error_explanation">
                <h2><%= @book.errors.count %> error prohibited this user from being saved: </h2>
                <ul>
                <% @book.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
               <% end %>
                </ul>
              </div>
          <% end %>

    <h4>title</h4>
    <%= f.text_field :title, class: "book_title" %>
    <h4>opinion</h4>
    <%= f.text_area :body, class: "book_body" %>
    <%= f.submit 'Update Book' %>

<% end %>


<%= link_to "Show", book_path(@book.id) %>|<%= link_to "Back","/books",class: "back" %>