<% if @book_new.errors.any? %>
              <div id="error_explanation">
                <h2><%= @book_new.errors.count %> error prohibited this user from being saved: </h2>
                <ul>
                <% @book_new.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
               <% end %>
                </ul>
              </div>
          <% end %>

<%= render 'users/list', user: @user, book: @book_new %>

<div class="col-md-8">

<h1>Books</h1>
<table class="table table-striped">
  <thead>
    <tr>
      <th>image</th>
      <th>title</th>
      <th>opinion</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>

    <div class="books-index-item">
      <% @books.each do |book| %>
      <tr>
        <td><%= attachment_image_tag book.user, :profile_image, :fill, 40, 40, fallback: "no_image.jpg", class: "img-rounded pull-left profile-thumb" %></td>
        <td><span><%= link_to book.title, book_path(book.id), class: "book_#{book.id}" %></span></td>
        <td><%= book.body %></td>
      </tr>
      <% end %>
    </div>
  </tbody>
</table>

</div>
